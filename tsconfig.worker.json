{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "WebWorker"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": [
      "@cloudflare/workers-types"
    ]
  },
  "include": [
    "src/worker/*.ts",
    "src/worker/*.js"
  ],
  "exclude": [
    "src/components",
    "src/constants",
    "src/database",
    "src/types",
    "src/utils",
    "src/App.*",
    "src/main.*",
    "src/index.*",
    "scripts",
    "tests",
    "node_modules"
  ]
}
