{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "src/components/**/*",
    "src/constants/**/*",
    "src/database/**/*",
    "src/types/**/*",
    "src/utils/*.ts",
    "src/utils/*.tsx",
    "src/App.*",
    "src/main.*",
    "src/index.*"
  ],
  "exclude": [
    "src/worker",
    "scripts",
    "tests",
    "node_modules"
  ]
}
