{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2024",
    "lib": [
      "ES2024"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "vite/client"
    ]
  },
  "include": [
    "vite.config.ts",
    "playwright.config.ts",
    "playwright.production.config.ts"
  ],
  "exclude": [
    "src",
    "scripts",
    "tests",
    "node_modules"
  ]
}
